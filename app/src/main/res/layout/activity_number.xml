<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E40C0C"
    android:layout_height="896dp"
    tools:context=".classes.NumberActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="114dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="600dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="66dp"
            android:src="@drawable/dlogo"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
<GridLayout
    android:layout_width="414dp"
    android:layout_height="620dp"
    android:background="@drawable/shape"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xush Kelibsiz"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/textline"
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Avtorizatsiya qilish uchun
            telefon raqamingizni kiriting"
            android:textSize="17dp"
            android:textColor="#393636"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="110dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefon raqamingizni kiriting"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/il_name"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="155dp"/>
        <LinearLayout
            android:id="@+id/il_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="310dp"
            android:orientation="horizontal"
            android:layout_height="55dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:background="@drawable/forspeener"
            app:boxCornerRadiusTopStart="10dp"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/phoneicon" />
            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="250dp"
                android:textStyle="bold"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:gravity="center"
                android:lineHeight="0dp"
                android:hint="+998972733404"
                android:textColorHighlight="#7cff88"
                android:inputType="phone"
                android:autofillHints="phone"
                android:maxLength="13"
                android:layout_height="55dp">

            </EditText>

        </LinearLayout>
        <TextView
            android:id="@+id/txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hududni tanlang"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/textline2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="220dp"/>
        <LinearLayout
            android:id="@+id/textline2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="310dp"
            android:layout_height="55dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:boxCornerRadiusBottomStart="10dp"
            android:gravity="center_horizontal"
            android:background="@drawable/forspeener"
            android:layout_gravity="center"
            app:boxCornerRadiusTopEnd="10dp"
            android:orientation="horizontal"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black"
            android:layout_marginBottom="170dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_my_location_24" />
            </androidx.cardview.widget.CardView>
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@id/txtView"/>


        </LinearLayout>
        <Button
            android:id="@+id/tocode"
            android:layout_width="310dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Next"
            android:textColorHint="@color/white"
            android:textSize="17sp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/radiusbottom"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>