<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E40C0C"
    tools:context=".classes.CodeActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="114dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="600dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="66dp"
            android:src="@drawable/dlogo"

            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
    <GridLayout
        android:layout_width="414dp"
        android:layout_height="620dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/welcome"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:text="Parolni kiriting"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"/>
            <TextView
                android:id="@+id/textline"
                android:layout_width="340dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Tasdiqlash kodi +998 99 909 3557 raqamiga yuborildi, qabul qilingan kodni kiriting"
                android:textSize="17dp"
                android:textColor="#393636"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="110dp"/>


            <TextView
                android:id="@+id/txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kod kiritishda xatolik mavjud"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/textline2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="150dp"/>
            <LinearLayout
                android:id="@+id/textline2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="310dp"
                android:layout_height="55dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:boxCornerRadiusBottomStart="10dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                app:boxCornerRadiusTopEnd="10dp"
                android:orientation="horizontal"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/black"
                android:layout_marginBottom="170dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.chaos.view.PinView
                    android:id="@+id/pinview"
                    style="@style/PinWidget.PinView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:cursorVisible="false"
                    android:inputType="number"
                    android:textColor="#039BE5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:layout_marginLeft="30dp"
                    app:hideLineWhenFilled="false"
                    app:itemCount="5"
                    app:itemHeight="40dp"
                    app:itemRadius="10dp"
                    app:itemSpacing="20dp"
                    app:itemWidth="35dp"
                    app:lineColor="#E6E6E6"
                    app:lineWidth="2dp"
                    app:viewType="rectangle" />


            </LinearLayout>

            <TextView
                android:id="@+id/again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kodni qayta yuborish"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/clicktomenu"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintEnd_toEndOf="parent" />
            <TextView
                android:id="@+id/egaintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kod kiritishda xatolik mavjud"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/textline2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintEnd_toEndOf="parent" />
            <Button
                android:id="@+id/clicktomenu"
                android:layout_width="310dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Next"
                android:textColorHint="@color/white"
                android:textSize="17sp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/radiusbottom"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </GridLayout></androidx.constraintlayout.widget.ConstraintLayout>